<%- include('partials/header') %>
    <div class="container mt-5">
        <h1>UPDATE PARCEL </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">


                        <!-- Makes POST request to /register route -->
                        <form action="/updateparcel" method="POST">

                            <div class="form-group">
                                <label>Parcel ID</label>
                                <input type="text" class="form-control" name="parcelid">
                            </div>
                            <div class="form-group">
                                <label>Update Location</label>
                                <select name="location" id="new_location" style="width: 20%;margin-left:10px;"> </select>
                            </div>
                            <div class="form-group">
                                <label>Date</label>
                                <input type="date" class="form-control" name="date">
                            </div>

                            <button type="submit" class="btn btn-dark">Update</button>
                        </form>
                        <input type="text" class="locations" value="<%= data %>" style="display: none;">
                    </div>
                </div>
            </div>



        </div>
    </div>

    <%- include('partials/header') %>
    <script>
        var data= JSON.parse(document.querySelector(".locations").value);
        var block="";

        if(data.length == 0){
            block='<option value="NULL">No Locations available</option>'
        }
        for(i=0; i<data.length;i++){
            block+='<option value="'+data[i].location+'">'+data[i].location+'</option>'
        }
        document.getElementById("new_location").innerHTML=block;

    </script>
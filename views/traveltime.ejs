<%- include('partials/header') %>
    <div class="container mt-5">
        <h1>UPDATE TIME</h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <!-- Makes POST request to /register route -->
                        <form action="/traveltime" method="POST">
                            <div class="form-group">
                                <label>FROM</label>
                                <select name="from" id="from" style="width: 20%;margin-left:10px;"> </select>
                            </div>
                            <div class="form-group">
                                <label>TO</label>
                                <select name="to" id="to" style="width: 20%;margin-left:33px;"> </select>
                            </div>
                            <div class="form-group">
                                <label>TIME</label>
                                <input type="text" class="form-control" name="newtime">
                            </div>
                            <button type="submit" class="btn btn-dark">UPDATE</button>
                        </form>
                        <input type="text" class="locations" value="<%= data %>" style="display: none;">
                    </div>
                </div>
            </div>



        </div>
    </div>

    <%- include('partials/header') %>
        <script>
            var data = JSON.parse(document.querySelector(".locations").value);
            var block = "";

            if (data.length == 0) {
                block = '<option value="NULL">No Locations available</option>'
            }
            for (i = 0; i < data.length; i++) {
                block += '<option value="' + data[i].location + '">' + data[i].location + '</option>'
            }
            document.getElementById("from").innerHTML = block;
            document.getElementById("to").innerHTML = block;

        </script>